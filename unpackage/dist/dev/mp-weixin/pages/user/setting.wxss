.ico-1 {
  width: 13rpx;
  height: 22rpx;
  background: url("https://golemo.oss-cn-shenzhen.aliyuncs.com//5f324a69c7d29.png") no-repeat center;
  background-size: contain;
}
.user-setting {
  min-height: 100%;
  background-color: #f7f7f7;
}
.user-setting .list-box {
  background-color: #ffffff;
}
.user-setting .list-box .box {
  border-bottom: 1px solid #f7f7f7;
  height: 98rpx;
  margin-left: 10px;
  padding-right: 40rpx;
}
.user-setting .list-box .box text {
  font-size: 28rpx;
  color: #333333;
}
.user-setting .list-box .box:last-child {
  border-bottom: none;
}
.user-setting .list-box .box .userImage {
  width: 50rpx;
  height: 50rpx;
  margin-right: 30rpx;
  border-radius: 50%;
}
.user-setting .btn {
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  background: #ff4531;
  font-size: 28rpx;
  color: #ffffff;
  margin-top: 20rpx;
}
.user-setting .b-body {
  width: 100%;
  background-color: white;
  font-size: 32rpx;
  color: #343434;
}
.user-setting .b-body .hang {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-bottom: 1px solid #f7f7f7;
}

