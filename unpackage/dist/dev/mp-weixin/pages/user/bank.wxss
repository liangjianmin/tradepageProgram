.ico-1 {
  width: 15rpx;
  height: 23rpx;
  background: url("https://golemo.oss-cn-shenzhen.aliyuncs.com//5f32594f7da60.png") no-repeat center;
  background-size: contain;
}
.user-bank {
  padding-top: 37rpx;
}
.user-bank .bank {
  padding: 0 58rpx;
}
.user-bank .bank .tit {
  font-size: 56rpx;
  color: #333333;
  margin-bottom: 57rpx;
  display: block;
  font-weight: bold;
}
.user-bank .bank .input-wrap {
  position: relative;
  margin-bottom: 30rpx;
  height: 92rpx;
  background: #f6f6f6;
  border-radius: 10rpx;
  padding-left: 31rpx;
  padding-right: 35rpx;
}
.user-bank .bank .input-wrap .input-placeholder {
  color: #b7b7b7 !important;
}
.user-bank .bank .input-wrap input {
  font-size: 34rpx;
}
.user-bank .bank .input-wrap .bank-txt image {
  width: 43rpx;
  height: 43rpx;
}
.user-bank .bank .input-wrap .bank-txt text {
  font-size: 34rpx;
  color: #333333;
  margin-left: 6px;
  font-weight: 500;
}
.user-bank .bank .input-wrap .txt {
  position: absolute;
  bottom: -50rpx;
  left: 0;
  font-size: 26rpx;
  color: #4e98d6;
  font-weight: bold;
}
.user-bank .bank .input-wrap .code {
  padding: 0 !important;
  margin: 0 !important;
  font-size: 34rpx;
  border: none !important;
  background: none !important;
  color: #ec5951 !important;
  outline: none !important;
}
.user-bank .bank .input-wrap .code::after {
  border: none;
}
.user-bank .bank .btn {
  margin: 108rpx 32rpx 0 32rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #ff4531;
  border-radius: 10rpx;
  font-size: 34rpx;
  color: #ffffff;
}
.user-bank .bank .btn input {
  font-size: 34rpx;
}

