.publish {
  margin-top: 36rpx;
}
.publish .content {
  padding: 0 51rpx;
}
.publish .content textarea {
  width: 632rpx;
  font-size: 26rpx;
  color: #666666;
  line-height: 36rpx;
  height: 60rpx;
}
.publish .media {
  margin-top: 37rpx;
  padding: 0 42rpx;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 215rpx;
          flex: 0 0 215rpx;
}
.publish .media .box {
  width: 215rpx;
  height: 215rpx;
  position: relative;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}
.publish .media .box:nth-of-type(3n) {
  margin-right: 0;
}
.publish .media .box .delete {
  position: absolute;
  right: 7rpx;
  top: 7rpx;
  width: 32rpx;
  height: 32rpx;
  background: url("https://golemo.oss-cn-shenzhen.aliyuncs.com//5f486e874ba13.png") no-repeat center;
  background-size: cover;
}
.publish .media .box image {
  width: 215rpx;
  height: 215rpx;
  border-radius: 10rpx;
}
.publish .media .box video {
  width: 215rpx;
  height: 215rpx;
  border-radius: 10rpx;
  background: #000000;
}
.publish .media .box.default {
  background: url("https://igoleme.oss-cn-shenzhen.aliyuncs.com/5f51faed5cdab.png") no-repeat center;
  background-size: contain;
}
.publish .btn {
  position: fixed;
  bottom: 20rpx;
  left: 0;
  right: 0;
  margin: 0 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: #FF4531;
  border-radius: 4rpx;
  font-size: 30rpx;
  color: #FFFFFF;
  text-align: center;
}

