.payment {
  width: 100%;
  height: 100%;
  background-color: #F0EFF5;
  padding-top: 65rpx;
}
.payment-box {
  width: 100%;
  height: 100%;
}
.payment-c {
  width: 686rpx;
  margin: 0 auto;
  box-sizing: border-box;
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 50rpx 30rpx;
}
.payment-c .totaltext {
  color: #333333;
  font-size: 26rpx;
}
.payment-c .total {
  font-size: 60rpx;
  color: #333333;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border-bottom: 1px solid #F8F8F8;
  margin-top: 20rpx;
  padding-bottom: 10rpx;
}
.payment-c .total .money {
  margin-left: 10rpx;
}
.payment-c .remark {
  margin-top: 15rpx;
  font-size: 26rpx;
  color: #999999;
}
.submit {
  width: 94%;
  margin: 0 auto;
  height: 80rpx;
  background-color: #FF4531;
  border-radius: 8rpx;
  line-height: 80rpx;
  text-align: center;
  color: #FFFFFF;
  font-size: 30rpx;
  margin-top: 30rpx;
}
.key {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  font-size: 32rpx;
}
.key .num {
  width: 33%;
  height: 90rpx;
  background-color: #FFFFFF;
  border-radius: 20rpx;
  border: 1px solid #F0EFF5;
  text-align: center;
  line-height: 90rpx;
}
.key .delete {
  background-color: #DEE1E9;
  color: #333333;
}

